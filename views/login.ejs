<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login - Gnomo do Ano</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/index.css" rel="stylesheet">
  <link href="/stylesheets/auth.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <main class="page-content container" style="max-width:520px;">
    <section class="auth-hero text-center">
      <h1 class="hero-title">LOGIN</h1>
      <p class="text-muted small">Acesse sua conta para continuar</p>
    </section>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <div class="alert alert-danger d-none" id="passwordMismatch">As senhas não coincidem</div>

    <form method="POST" action="/users/login" class="auth-card" id="loginForm" novalidate>
      <div class="mb-3">
        <label class="auth-label">Usuário</label>
        <input name="username" class="form-control auth-input" placeholder="Digite seu usuário" required />
      </div>
      <div class="mb-3">
        <label class="auth-label">Senha</label>
        <input name="password" id="loginPassword" type="password" class="form-control auth-input" placeholder="Digite sua senha" required />
      </div>
      <div class="mb-4">
        <label class="auth-label">Confirmar senha</label>
        <input name="password_confirm" id="loginPasswordConfirm" type="password" class="form-control auth-input" placeholder="Confirme sua senha" required />
      </div>
      <div class="auth-actions">
        <button class="btn btn-theme" type="submit">Entrar</button>
      </div>
      <p class="auth-note">Ainda não tem conta? <a href="/users/register" class="link-light">Registre-se</a></p>
    </form>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    (function() {
      const form = document.getElementById('loginForm');
      const password = document.getElementById('loginPassword');
      const confirm = document.getElementById('loginPasswordConfirm');
      const error = document.getElementById('passwordMismatch');

      function validateMatch() {
        if (!password.value || !confirm.value) {
          error.classList.add('d-none');
          confirm.setCustomValidity('');
          return;
        }
        if (password.value !== confirm.value) {
          error.classList.remove('d-none');
          confirm.setCustomValidity('As senhas não coincidem');
        } else {
          error.classList.add('d-none');
          confirm.setCustomValidity('');
        }
      }

      password.addEventListener('input', validateMatch);
      confirm.addEventListener('input', validateMatch);

      form.addEventListener('submit', function(event) {
        validateMatch();
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
      });
    })();
  </script>
</body>
</html>
