<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Categorias - Gnomo do Ano</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/index.css" rel="stylesheet">
  <link href="/stylesheets/categorias.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <main class="page-content container">

    <section class="categorias-hero text-center">
      <h1 class="hero-title">CATEGORIAS</h1>
      <p class="text-muted small">Organize as categorias e vincule os gnomos participantes</p>
    </section>

    <div class="d-flex justify-content-start mb-4">
      <button type="button" class="btn btn-theme me-2" onclick="history.back()">‚Üê Voltar</button>
    </div>

    <div class="row g-4">
      <% for (item of resultado) { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="categoria-card">
            <div class="categoria-card-body">
              <h5 class="categoria-title"><%= item.nome_categoria %></h5>
              <p class="categoria-desc"><%= item.desc_categoria %></p>
            </div>
            <div class="categoria-card-footer">
              <button
                class="btn btn-theme w-100"
                data-bs-toggle="modal"
                data-bs-target="#Gnomos"
                data-id-categoria="<%= item.id_categoria %>">
                Anexar Gnomos
              </button>
            </div>
          </div>
        </div>
      <% } %>
    </div>

  </main>

<!-- MODAL -->
<div class="modal fade" id="Gnomos" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content categorias-modal">

      <form method="POST" action="/categoria/anexar-gnomos">

        <div class="modal-header">
          <h5 class="modal-title">Anexar Gnomos</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" name="id_categoria" id="idCategoria">
          <div class="gnomos-toolbar">
            <button type="button" class="btn btn-secondary btn-sm" id="selecionarTudo">Selecionar tudo</button>
            <button type="button" class="btn btn-secondary btn-sm" id="deselecionarTudo">Deselecionar tudo</button>
          </div>
          <div id="listaGnomos" class="gnomos-list"></div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-theme">Salvar</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancelar
          </button>
        </div>

      </form>

    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  const modal = document.getElementById('Gnomos');
  const lista = document.getElementById('listaGnomos');
  const btnSelecionarTudo = document.getElementById('selecionarTudo');
  const btnDeselecionarTudo = document.getElementById('deselecionarTudo');

  function setAllChecks(checked) {
    lista.querySelectorAll('.gnomo-option-input').forEach(input => {
      input.checked = checked;
    });
  }

  btnSelecionarTudo.addEventListener('click', () => setAllChecks(true));
  btnDeselecionarTudo.addEventListener('click', () => setAllChecks(false));

  modal.addEventListener('show.bs.modal', async (event) => {
    const button = event.relatedTarget;
    const idCategoria = button.getAttribute('data-id-categoria');

    document.getElementById('idCategoria').value = idCategoria;
    lista.innerHTML = '<p class="text-muted">Carregando gnomos...</p>';

    const res = await fetch(`/categoria/gnomos-categoria?id_categoria=${idCategoria}`);
    const gnomos = await res.json();

    lista.innerHTML = '';

    gnomos.forEach(g => {
      let imagemUrl = (g.foto_gnomo || '').toString();
      if (imagemUrl) {
        imagemUrl = imagemUrl.replace(/\\/g, '/');
        if (imagemUrl.includes('public/')) {
          imagemUrl = '/' + imagemUrl.split('public/')[1];
        }
        if (!imagemUrl.startsWith('/')) {
          imagemUrl = '/images/' + imagemUrl;
        }
      }

      const fotoHtml = imagemUrl
        ? `<img src="${imagemUrl}" alt="${g.nome_gnomo}" class="gnomo-option-photo" onerror="this.onerror=null;this.src='/images/1766513478808-388801612.jpg';">`
        : `<div class="gnomo-option-photo gnomo-option-placeholder">Sem foto</div>`;

      lista.innerHTML += `
        <div class="gnomo-option">
          <label class="gnomo-option-card">
            <input
              class="gnomo-option-input"
              type="checkbox"
              name="gnomos"
              value="${g.id_gnomo}"
              ${g.anexado ? 'checked' : ''}
            >
            <span class="gnomo-option-name">${g.nome_gnomo}</span>
            ${fotoHtml}
            <span class="gnomo-option-status">Selecionado</span>
          </label>
        </div>
      `;
    });
  });
</script>

</body>
</html>
