<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Listagem de Categorias</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
<%- include('partials/header') %>
<div class="container mt-4">

  <h1 class="text-center fw-bold mb-4">Listagem de Categorias</h1>

  <div class="mb-3">
    <a href="/config/config" class="btn btn-secondary me-2">
        Voltar
    </a>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm">
      <thead class="table-primary">
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>Descrição</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for (item of resultado) { %>
        <tr>
          <td><%= item.id_categoria %></td>
          <td><%= item.nome_categoria %></td>
          <td><%= item.desc_categoria %></td>
          <td>
            <button
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#Gnomos"
              data-id-categoria="<%= item.id_categoria %>">
              Anexar Gnomos
            </button>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

</div>

<!-- MODAL -->
<div class="modal fade" id="Gnomos" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">

      <form method="POST" action="/categoria/anexar-gnomos">

        <div class="modal-header">
          <h5 class="modal-title">Anexar Gnomos</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" name="id_categoria" id="idCategoria">
          <div id="listaGnomos"></div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Salvar</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancelar
          </button>
        </div>

      </form>

    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  const modal = document.getElementById('Gnomos');
  const lista = document.getElementById('listaGnomos');

  modal.addEventListener('show.bs.modal', async (event) => {
    const button = event.relatedTarget;
    const idCategoria = button.getAttribute('data-id-categoria');

    document.getElementById('idCategoria').value = idCategoria;
    lista.innerHTML = '<p class="text-muted">Carregando gnomos...</p>';

    const res = await fetch(`/categoria/gnomos-categoria?id_categoria=${idCategoria}`);
    const gnomos = await res.json();

    lista.innerHTML = '';

    gnomos.forEach(g => {
      lista.innerHTML += `
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="gnomos"
            value="${g.id_gnomo}"
            ${g.anexado ? 'checked' : ''}
          >
          <label class="form-check-label">
            ${g.nome_gnomo}
          </label>
        </div>
      `;
    });
  });
</script>

</body>
</html>
