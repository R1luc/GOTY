<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Listagem de Gnomos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/index.css" rel="stylesheet">
    <link href="/stylesheets/gnomos.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>

    <main class="page-content container">

        <!-- Gnomos page hero/title -->
        <section class="gnomos-hero text-center mb-4">
            <h1 class="hero-title">GNOMOS</h1>
            <p class="text-muted small">Conheça todos os nossos gnomos participantes</p>
        </section>

        <!-- Botões de ação -->
        <div class="d-flex justify-content-between align-items-center mb-5">
            <button type="button" class="btn btn-theme" onclick="history.back()">
                ← Voltar
            </button>
             <% if (user && user.id === 1) { %>
            <a href="http://localhost:3000/gnomo/add" class="btn btn-theme">
                + Incluir Gnomo
            </a>
                <% } %>
        </div>

        <!-- Grid de Gnomos -->
        <div class="row g-4">
            <% for (item of resultado) { %>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="gnomo-card">
                    <div class="gnomo-image-wrap">
                        <img src="<%= item.foto_gnomo %>" alt="<%= item.nome_gnomo %>" class="gnomo-image">
                    </div>
                    <div class="gnomo-info">
                        <h5 class="gnomo-name"><%= item.nome_gnomo %></h5>
                        <p class="gnomo-description"><%= item.desc_gnomo %></p>
                        <div class="gnomo-actions">
                            <% if (user && user.id === 1) { %>
                            <a href="/gnomo/deletar/<%= item.id_gnomo %>" class="btn btn-sm btn-delete" onclick="return confirm('Tem certeza que deseja deletar?')">Deletar</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
