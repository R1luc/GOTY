<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Votação - Gnomo do Ano</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/index.css" rel="stylesheet">
  <link href="/stylesheets/votos.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/header') %>

  <main class="page-content container">

    <!-- Vote page hero/title similar to homepage -->
    <section class="vote-hero text-center mb-4">
      <h1 class="hero-title">VOTAR</h1>
      <p class="text-muted small">Escolha a categoria e selecione seu gnomo favorito</p>
    </section>

    <div class="d-flex justify-content-start mb-3">
      <button type="button" class="btn btn-theme me-2" onclick="history.back()">
        ← Voltar
      </button>
    </div>

    <div class="row g-4">
      <% for (item of resultado) { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="action-card h-100">
            <h5 class="mb-2"><%= item.nome_categoria %></h5>
            <p class="text-muted small mb-3"><%= item.desc_categoria %></p>
            <div class="mt-auto">
              <button class="btn btn-theme w-100" data-bs-toggle="modal" data-bs-target="#Gnomos" data-id-categoria="<%= item.id_categoria %>">
                Votar nesta categoria
              </button>
            </div>
          </div>
        </div>
      <% } %>
    </div>

  </main>

<!-- MODAL -->
<div class="modal fade" id="Gnomos" tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">

      <form method="POST" action="/votos/votar-gnomos">

        <div class="modal-header">
          <h5 class="modal-title">Votar em Gnomo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" name="id_categoria" id="idCategoria">
          <div id="listaGnomos"></div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Salvar</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            Cancelar
          </button>
        </div>

      </form>

    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  const modal = document.getElementById('Gnomos');
  const lista = document.getElementById('listaGnomos');

  modal.addEventListener('show.bs.modal', async (event) => {
    const button = event.relatedTarget;
    const idCategoria = button.getAttribute('data-id-categoria');

    document.getElementById('idCategoria').value = idCategoria;
    lista.innerHTML = '<p class="text-muted">Carregando gnomos...</p>';

    const res = await fetch(`/votos/gnomos-voto-lista?id_categoria=${idCategoria}`);
    const gnomos = await res.json();

    if (!Array.isArray(gnomos) || gnomos.length === 0) {
      lista.innerHTML = '<p class="text-muted">Nenhum gnomo disponível nesta categoria.</p>';
      return;
    }

    // Render as grid of nominee cards (same design as categorias modal)
    lista.innerHTML = '<div class="row g-3">' + gnomos.map(g => {
      let imgUrl = '';
      if (g.foto_gnomo && typeof g.foto_gnomo === 'string' && g.foto_gnomo.length > 0) {
        imgUrl = g.foto_gnomo.startsWith('/') ? g.foto_gnomo : ('/images/' + g.foto_gnomo);
      }

      const fotoHtml = imgUrl
        ? `<img src="${imgUrl}" alt="${g.nome_gnomo}" class="nominee-photo" onerror="this.src='/images/1766513478808-388801612.jpg'">`
        : `<div class="nominee-photo nominee-placeholder">Sem foto</div>`;

      return `
        <div class="col-12 col-sm-6 col-md-4">
          <label class="nominee-card">
            <input class="nominee-input" type="radio" name="gnomos" value="${g.id_gnomo}" ${g.anexado ? 'checked' : ''}>
            <span class="nominee-name">${g.nome_gnomo}</span>
            ${fotoHtml}
            <span class="nominee-status">Selecionado</span>
          </label>
        </div>
      `;
    }).join('') + '</div>';
  });
</script>

</body>
</html>
